{
  "buildCommand": "npm run build",
  "installCommand": "npm ci --prefer-offline --no-audit",
  "framework": "nextjs",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "app/**/*.tsx": {
      "maxDuration": 30
    }
  }
}
